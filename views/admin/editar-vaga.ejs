<%- include('header') %>

<h2>
    Nova vaga: 
</h2>

    <div>
        <form method="POST">
            <label>Titulo:</label>
            <input type="text" name="titulo" value="<%= vaga.titulo %>">
            </br>
            <label>Descrição:</label>
            <textarea name="descricao"> <%= vaga.descricao %></textarea>
            </br>
            <label>Categoria:</label>
            <select name="categoria">
                <% categorias.forEach( c => { %>
                    <option value="<%= c.id %>" <% if(c.id == vaga.categoria){ %> selected<% } %> > <%= c.categoria %></option>
                <% }) %>
            </select>
            </br>
            <button >Salvar vaga</button>
        </form>
    </div>

<%- include('footer') %>